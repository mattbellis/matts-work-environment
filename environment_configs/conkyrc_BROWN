alignment top_left

background no

border_width 0

cpu_avg_samples 2

default_color 413000

default_outline_color black

default_shade_color black

double_buffer yes

draw_borders no

draw_graph_borders yes

draw_outline no

draw_shades no

extra_newline no

gap_x 15 gap_y 7

maximum_width 800

minimum_size 400 200

net_avg_samples 2

no_buffers yes

out_to_console no

out_to_stderr no

own_window yes

own_window_class Conky

own_window_hints undecorated,below,sticky,skip_pager,skip_taskbar

own_window_title [your title]

own_window_transparent yes

own_window_type desktop

show_graph_range no

show_graph_scale no

stippled_borders 0

text_buffer_size 1024

update_interval 2.0

uppercase no

use_spacer none

use_xft yes

xftfont ostrich light:size=12

